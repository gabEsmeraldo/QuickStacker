{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd back && mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd back && java $JAVA_OPTS -jar target/back-0.0.1-SNAPSHOT.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

